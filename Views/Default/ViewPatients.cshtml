@model IEnumerable<AMS.Patient>

@{
    ViewBag.Title = "ViewPatients";
    Layout = "~/Views/DefaultLayout.cshtml";
    List<Patient> Patients = ViewBag.Patients;
    User user = (User)Session["User"];
}

<div class="content-wrapper">
    <!-- Content -->

    <div class="container-xxl flex-grow-1 container-p-y">
        <h4 class="fw-bold py-3 mb-4"><span class="text-muted fw-light">Patients /</span> View Patients</h4>

        <!-- Basic Bootstrap Table -->
        <div class="card">
            <h5 class="card-header">Patients</h5>
            <div class="table-responsive text-nowrap" style="min-height: 200px;">
                <table class="table">
                    <thead>
                        <tr>
                            <th>ID</th>
                            <th>Name</th>
                            <th>Gender</th>
                            <th>Email</th>
                            <th>Address</th>
                            <th>Phone</th>
                            @if (user.Type == UserType.Admin)
                            {
                                <th>Created</th>
                                <th>Created By</th>
                                <th>Modified</th>
                                <th>Modified By</th>
                            }
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody class="table-border-bottom-0">
                        @foreach (Patient item in Patients)
                        {
                            <tr>
                                <td><i class="fab fa-angular fa-lg text-danger me-3"></i> <strong>@Html.DisplayFor(modelItem => item.Id)</strong></td>
                                <td>@Html.DisplayFor(modelItem => item.Name)</td>
                                <td>
                                    @if (item.Gender == Gender.Male)
                                    {
                                        <span class="badge bg-label-success me-1">Male</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-label-danger me-1">Female</span>
                                    }
                                </td>
                                <td>@Html.DisplayFor(modelItem => item.Email)</td>
                                <td>@Html.DisplayFor(modelItem => item.Address)</td>
                                <td>@Html.DisplayFor(modelItem => item.Phone)</td>
                                @if (user.Type == UserType.Admin)
                                {
                                    <td>@item.Created</td>
                                    <td>@item.CreatedBy</td>
                                    <td>@item.Modified</td>
                                    <td>@item.ModifiedBy</td>
                                }
                                <td>
                                    <div class="dropdown">
                                        <button type="button" class="btn p-0 dropdown-toggle hide-arrow" data-bs-toggle="dropdown">
                                            <i class="bx bx-dots-vertical-rounded"></i>
                                        </button>
                                        <div class="dropdown-menu">
                                            @{
                                                if (user.Type == UserType.Admin)
                                                {
                                                    <a class="dropdown-item" href="@Url.Action("DeletePatient", new { id = item.Id })"><i class="bx bx-trash me-1"></i> Delete</a>
                                                }
                                            }
                                            <a class="dropdown-item"><i class="bx bx-block me-1"></i> No Action</a>
                                        </div>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>