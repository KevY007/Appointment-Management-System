@model IEnumerable<AMS.Doctor>

@{
    ViewBag.Title = "ViewDoctors";
    Layout = "~/Views/DefaultLayout.cshtml";
    User user = (User)Session["User"];
    List<Department> Departments = ViewBag.Departments;
    List<Doctor> Doctors = ViewBag.Doctors;
}

<div class="content-wrapper">
    <!-- Content -->

    <div class="container-xxl flex-grow-1 container-p-y">
        <h4 class="fw-bold py-3 mb-4"><span class="text-muted fw-light">Doctors /</span> View Doctors</h4>

        <!-- Basic Bootstrap Table -->
        <div class="card">

            <div class="table-responsive text-nowrap" style="min-height: 200px;">
                <table class="table">
                    <thead>
                        <tr>
                            <th>ID</th>
                            <th>Name</th>
                            <th>Department</th>
                            <th>On Break</th>
                            <th>Salary</th>
                            @if (user.Type == UserType.Admin)
                            {
                                <th>Created</th>
                                <th>Created By</th>
                                <th>Modified</th>
                                <th>Modified By</th>
                            }
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody class="table-border-bottom-0">
                        @foreach (Doctor item in Doctors)
                        {
                            <tr>
                                <td><i class="fab fa-angular fa-lg text-danger me-3"></i> <strong>@Html.DisplayFor(modelItem => item.Id)</strong></td>
                                <td>@item.Name</td>
                                <td>@item.Department.Name</td>
                                @{
                                    if (item.Available)
                                    {
                                        <td><span class="badge bg-label-success me-1">No</span></td>
                                    }
                                    else
                                    {
                                        <td><span class="badge bg-label-danger me-1">Yes</span></td>
                                    }
                                }
                                <td>@item.Salary</td>
                                @if (user.Type == UserType.Admin)
                                {
                                    <td>@item.Created</td>
                                    <td>@item.CreatedBy</td>
                                    <td>@item.Modified</td>
                                    <td>@item.ModifiedBy</td>
                                }
                                <td>
                                    <div class="dropdown">
                                        <button type="button" class="btn p-0 dropdown-toggle hide-arrow" data-bs-toggle="dropdown">
                                            <i class="bx bx-dots-vertical-rounded"></i>
                                        </button>
                                        <div class="dropdown-menu">
                                            @{
                                                <a class="dropdown-item" href="@Url.Action("DeleteDoctor", new { id = item.Id })"><i class="bx bx-trash me-1"></i> Delete</a>
                                            }
                                        </div>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>