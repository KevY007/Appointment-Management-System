@{
    ViewBag.Title = "MonthlyDepartmentsReport";
    Layout = "~/Views/DefaultLayout.cshtml";
    User user = (User)Session["User"];
    List<object[]> Reports = ViewBag.Reports;
}

<div class="content-wrapper">
    <!-- Content -->

    <div class="container-xxl flex-grow-1 container-p-y">
        <h4 class="fw-bold py-3 mb-4"><span class="text-muted fw-light">Departments /</span> Monthly Departments Report</h4>

        <!-- Basic Bootstrap Table -->
        <div class="card">

            <div class="table-responsive text-nowrap" style="min-height: 200px;">
                <table class="table">
                    <thead>
                        <tr>
                            <th>ID</th>
                            <th>Department</th>
                            <th>Total Appointments</th>
                            <th>Completed Appointments</th>
                            <th>Pending Appointments</th>
                            <th>Total Income</th>
                            <th>Last Appointment On</th>
                        </tr>
                    </thead>
                    <tbody class="table-border-bottom-0">
                        @foreach (object[] item in Reports)
                        {
                            <tr>
                                <td><i class="fab fa-angular fa-lg text-danger me-3"></i> <strong>@item[0].ToString()</strong></td>
                                <td>@item[1].ToString()</td>
                                <td>@item[2].ToString()</td>
                                <td>@item[3].ToString()</td>
                                <td>@item[4].ToString()</td>
                                @{
                                    if(item[5] != null && item[5].ToString().Length > 1)
                                    {
                                        <td>@item[5].ToString()</td>
                                    }
                                    else 
                                    {
                                        <td>N/A</td>
                                    }
                                 }
                                @{
                                    if(item[6] != null && item[6].ToString().Length > 3)
                                    {
                                        <td>@DateTime.Parse(item[6].ToString()).ToString("dd/MM/yyyy")</td>
                                    }
                                    else 
                                    {
                                        <td>N/A</td>
                                    }
                                 }
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>