
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/DefaultLayout.cshtml";
    User user = (User)Session["User"];
}

<div class="container-xxl flex-grow-1 container-p-y">
    <div class="row">

        <!-- Greeting card -->
        <div class="col-lg-8 mb-4 order-0">
            <div class="card">
                <div class="d-flex align-items-end row">
                    <div class="col-sm-7">
                        <div class="card-body">
                            <h5 class="card-title text-primary">Welcome, @user.Name! 🎉</h5>
                            @{
                                if (user.Type == UserType.Admin)
                                {
                                    <p class="mb-4">
                                        Check out the <span class="fw-bold">administrative tools</span> available in the left hand
                                        panel.
                                    </p>
                                }
                                else if (user.Type == UserType.Doctor)
                                {
                                    <div class="mb-4">
                                        <a href="#" class="btn btn-sm btn-outline-primary">@(((Doctor)user).Department.Name) Department</a>
                                        @if (!((Doctor)user).Available)
                                        {
                                            <a href="#" class="btn btn-sm btn-warning">On Break</a>
                                        }
                                    </div>

                                    if (((Doctor)user).Available)
                                    {
                                        <p class="mb-4">
                                            You have <span class="fw-bold">@ViewBag.NumAppointmentsActive</span> pending appointments.
                                        </p>
                                    }
                                    else
                                    {
                                        <p class="mb-4">
                                            You are currently on a <span class="fw-bold">break</span>. No <span class="fw-bold">new appointments</span> will be scheduled.
                                        </p>
                                    }
                                }
                                else
                                {
                                    <p class="mb-4">
                                        You can create an <span class="fw-bold">appointment</span> in the left hand pane.
                                    </p>
                                }
                            }
                        </div>
                    </div>
                    <div class="col-sm-5 text-center text-sm-left">
                        <div class="card-body pb-0 px-0 px-md-4">
                            <img src="~/Theme/assets/img/illustrations/man-with-laptop-light.png"
                                 height="140"
                                 alt="View Badge User"
                                 data-app-dark-img="illustrations/man-with-laptop-dark.png"
                                 data-app-light-img="illustrations/man-with-laptop-light.png" />
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <!-- Statistics -->
        <div class="col-lg-4 col-md-4 order-1">
            <div class="row">

                @{
                    if (user.Type == UserType.Admin)
                    {
                        <!-- Num Departments -->
                        <div class="col-lg-6 col-md-12 col-6 mb-4">
                            <div class="card">
                                <div class="card-body">
                                    <div class="card-title d-flex align-items-start justify-content-between">
                                        <div class="avatar flex-shrink-0">
                                            <img src="~/Theme/assets/img/icons/unicons/registrations.png"
                                                 alt="chart success"
                                                 class="rounded" />
                                        </div>
                                    </div>
                                    <span class="fw-semibold d-block mb-1">Departments</span>
                                    <h3 class="card-title mb-2">@ViewBag.NumDepartments</h3>
                                    <small class="text-muted fw-semibold"> Created</small>
                                </div>
                            </div>
                        </div>

                        <!-- Num Patients -->
                        <div class="col-lg-6 col-md-12 col-6 mb-4">
                            <div class="card">
                                <div class="card-body">
                                    <div class="card-title d-flex align-items-start justify-content-between">
                                        <div class="avatar flex-shrink-0">
                                            <img src="~/Theme/assets/img/icons/unicons/students.png"
                                                 alt="chart success"
                                                 class="rounded" />
                                        </div>
                                    </div>
                                    <span class="fw-semibold d-block mb-1">Patients</span>
                                    <h3 class="card-title mb-2">@ViewBag.NumPatients</h3>
                                    <small class="text-muted fw-semibold"> Registered</small>
                                </div>
                            </div>
                        </div>

                        <!-- Num Doctors -->
                        <div class="col-lg-6 col-md-12 col-6 mb-4">
                            <div class="card">
                                <div class="card-body">
                                    <div class="card-title d-flex align-items-start justify-content-between">
                                        <div class="avatar flex-shrink-0">
                                            <img src="~/Theme/assets/img/icons/unicons/courses.png"
                                                 alt="chart success"
                                                 class="rounded" />
                                        </div>
                                    </div>
                                    <span class="fw-semibold d-block mb-1">Doctors</span>
                                    <h3 class="card-title mb-2">@ViewBag.NumDoctors</h3>
                                    <small class="text-muted fw-semibold"> Registered</small>
                                </div>
                            </div>
                        </div>

                        <!-- Num Admins -->
                        <div class="col-lg-6 col-md-12 col-6 mb-4">
                            <div class="card">
                                <div class="card-body">
                                    <div class="card-title d-flex align-items-start justify-content-between">
                                        <div class="avatar flex-shrink-0">
                                            <img src="~/Theme/assets/img/icons/unicons/students.png"
                                                 alt="chart success"
                                                 class="rounded" />
                                        </div>
                                    </div>
                                    <span class="fw-semibold d-block mb-1">Admins</span>
                                    <h3 class="card-title mb-2">@ViewBag.NumAdmins</h3>
                                    <small class="text-muted fw-semibold"> Created</small>
                                </div>
                            </div>
                        </div>

                        <!-- Num Appointments -->
                        <div class="col-lg-6 col-md-12 col-6 mb-4">
                            <div class="card">
                                <div class="card-body">
                                    <div class="card-title d-flex align-items-start justify-content-between">
                                        <div class="avatar flex-shrink-0">
                                            <img src="~/Theme/assets/img/icons/unicons/registrations.png"
                                                 alt="chart success"
                                                 class="rounded" />
                                        </div>
                                    </div>
                                    <span class="fw-semibold d-block mb-1">Appointments</span>
                                    <h3 class="card-title mb-2">@ViewBag.NumAppointmentsCompleted</h3>
                                    <small class="text-muted fw-semibold"> Total Completed</small>
                                </div>
                            </div>
                        </div>

                        <!-- Num Appointments Active -->
                        <div class="col-lg-6 col-md-12 col-6 mb-4">
                            <div class="card">
                                <div class="card-body">
                                    <div class="card-title d-flex align-items-start justify-content-between">
                                        <div class="avatar flex-shrink-0">
                                            <img src="~/Theme/assets/img/icons/unicons/registrations.png"
                                                 alt="chart success"
                                                 class="rounded" />
                                        </div>
                                    </div>
                                    <span class="fw-semibold d-block mb-1">Appointments</span>
                                    <h3 class="card-title mb-2">@ViewBag.NumAppointmentsActive</h3>
                                    <small class="text-muted fw-semibold"> Total Pending</small>
                                </div>
                            </div>
                        </div>
                    }
                    else if (user.Type == UserType.Doctor)
                    {
                        <!-- Num Patients -->
                        <div class="col-lg-6 col-md-12 col-6 mb-4">
                            <div class="card">
                                <div class="card-body">
                                    <div class="card-title d-flex align-items-start justify-content-between">
                                        <div class="avatar flex-shrink-0">
                                            <img src="~/Theme/assets/img/icons/unicons/students.png"
                                                 alt="chart success"
                                                 class="rounded" />
                                        </div>
                                    </div>
                                    <span class="fw-semibold d-block mb-1">Patients</span>
                                    <h3 class="card-title mb-2">@ViewBag.NumPatients</h3>
                                    <small class="text-muted fw-semibold"> To Tend</small>
                                </div>
                            </div>
                        </div>

                        <!-- Num Appointments Completed -->
                        <div class="col-lg-6 col-md-12 col-6 mb-4">
                            <div class="card">
                                <div class="card-body">
                                    <div class="card-title d-flex align-items-start justify-content-between">
                                        <div class="avatar flex-shrink-0">
                                            <img src="~/Theme/assets/img/icons/unicons/registrations.png"
                                                 alt="chart success"
                                                 class="rounded" />
                                        </div>
                                    </div>
                                    <span class="fw-semibold d-block mb-1">Appointments</span>
                                    <h3 class="card-title mb-2">@ViewBag.NumAppointmentsCompleted</h3>
                                    <small class="text-muted fw-semibold"> Completed</small>
                                </div>
                            </div>
                        </div>

                        <!-- Num Appointments Pending -->
                        <div class="col-lg-6 col-md-12 col-6 mb-4">
                            <div class="card">
                                <div class="card-body">
                                    <div class="card-title d-flex align-items-start justify-content-between">
                                        <div class="avatar flex-shrink-0">
                                            <img src="~/Theme/assets/img/icons/unicons/registrations.png"
                                                 alt="chart success"
                                                 class="rounded" />
                                        </div>
                                    </div>
                                    <span class="fw-semibold d-block mb-1">Appointments</span>
                                    <h3 class="card-title mb-2">@ViewBag.NumAppointmentsActive</h3>
                                    <small class="text-muted fw-semibold"> To Tend</small>
                                </div>
                            </div>
                        </div>
                    }
                    else
                    {
                        <!-- Num Appointments -->
                        <div class="col-lg-6 col-md-12 col-6 mb-4">
                            <div class="card">
                                <div class="card-body">
                                    <div class="card-title d-flex align-items-start justify-content-between">
                                        <div class="avatar flex-shrink-0">
                                            <img src="~/Theme/assets/img/icons/unicons/registrations.png"
                                                 alt="chart success"
                                                 class="rounded" />
                                        </div>
                                    </div>
                                    <span class="fw-semibold d-block mb-1">Appointments</span>
                                    <h3 class="card-title mb-2">@ViewBag.NumAppointmentsActive</h3>
                                    <small class="text-muted fw-semibold"> Scheduled</small>
                                </div>
                            </div>
                        </div>

                        <!-- Num Appointments Past(Completed) -->
                        <div class="col-lg-6 col-md-12 col-6 mb-4">
                            <div class="card">
                                <div class="card-body">
                                    <div class="card-title d-flex align-items-start justify-content-between">
                                        <div class="avatar flex-shrink-0">
                                            <img src="~/Theme/assets/img/icons/unicons/registrations.png"
                                                 alt="chart success"
                                                 class="rounded" />
                                        </div>
                                    </div>
                                    <span class="fw-semibold d-block mb-1">Appointments</span>
                                    <h3 class="card-title mb-2">@ViewBag.NumAppointmentsCompleted</h3>
                                    <small class="text-muted fw-semibold"> Completed</small>
                                </div>
                            </div>
                        </div>
                    }
                }
            </div>
        </div>
    </div>
</div>
