@model IEnumerable<AMS.Department>

@{
    ViewBag.Title = "ViewDepartments";
    Layout = "~/Views/DefaultLayout.cshtml";
    User user = (User)Session["User"];
    List<Department> Departments = ViewBag.Departments;
}

<div class="content-wrapper">
    <!-- Content -->

    <div class="container-xxl flex-grow-1 container-p-y">
        <h4 class="fw-bold py-3 mb-4"><span class="text-muted fw-light">Departments /</span> View Departments</h4>

        <!-- Basic Bootstrap Table -->
        <div class="card">

            <div class="table-responsive text-nowrap" style="min-height: 200px;">
                <table class="table">
                    <thead>
                        <tr>
                            <th>ID</th>
                            <th>Department</th>
                            <th>Cost / Salary</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody class="table-border-bottom-0">
                        @foreach (Department item in Departments)
                        {
                            <tr>
                                <td><i class="fab fa-angular fa-lg text-danger me-3"></i> <strong>@Html.DisplayFor(modelItem => item.Id)</strong></td>
                                <td>@item.Name</td>
                                <td>@item.AppointmentCost</td>
                                <td>
                                    <div class="dropdown">
                                        <button type="button" class="btn p-0 dropdown-toggle hide-arrow" data-bs-toggle="dropdown">
                                            <i class="bx bx-dots-vertical-rounded"></i>
                                        </button>
                                        <div class="dropdown-menu">
                                            @{
                                                <a class="dropdown-item" href="@Url.Action("DeleteDepartment", new { id = item.Id })"><i class="bx bx-trash me-1"></i> Delete</a>
                                            }
                                        </div>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>